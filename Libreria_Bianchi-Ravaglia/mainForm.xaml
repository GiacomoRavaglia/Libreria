<Window x:Class="Libreria_Bianchi_Ravaglia.mainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Libreria_Bianchi_Ravaglia"
        mc:Ignorable="d"
        Title="mainForm" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn_cercaAutore" Content="Cerca" HorizontalAlignment="Left" Margin="37,65,0,0" VerticalAlignment="Top" Width="120" Height="22" Click="btn_cercaAutore_Click"/>
        <TextBox x:Name="txt_autore" HorizontalAlignment="Left" Height="23" Margin="37,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Inserisci autore :" HorizontalAlignment="Left" Margin="31,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.27"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Window>
